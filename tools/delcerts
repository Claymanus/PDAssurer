#!/bin/bash
if [ -z "${I_DONT_MIND_IF_MY_CHROME_PKI_DATABASE_GETS_DELETED}" ]
then
    echo this will not work this way. see the script source
    exit -1
fi
export NSS_DEFAULT_DB_TYPE="sql"
certlist=$(certutil -d ~/.pki/nssdb -L |grep ID|sed 's/ID.*$/ID/')
if [ -z "$certlist" ]
then
    exit 0
fi
echo $certlist |xargs -d '\n' -n 1 certutil -d ~/.pki/nssdb -D -n  
